/*
 * Client script function for AMFO Edit Address button
 */
function amfoEditAddressButton(){
	// Insert a new line and set the default billing and default shipping flags
	// Edit the address for that line
	var lineIndex = 1;
	nlapiInsertLineItem('addressbook', lineIndex);
	nlapiSetCurrentLineItemValue('addressbook', 'defaultshipping', 'T');
	nlapiSetCurrentLineItemValue('addressbook', 'defaultbilling', 'T');

	NLShowAddressChildRecordPopup('addressbook', 'addressbookaddressaddress',
		false, '/app/common/address/address.nl', this, lineIndex,
		{width: 1000, height: 700}, 'addressbook', 'addressbookaddress');
}
