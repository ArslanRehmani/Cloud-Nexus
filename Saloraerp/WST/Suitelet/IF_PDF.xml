<pdf>
  <head>
    <macrolist>
      <macro id="footer">
        <p style="font-size:9.2px;">
          The supply of these commodities and services are subject to the Export Administration Regulations of the United States of America; disposal contrary to the U.S.A. law it prohibited.
        </p>
      </macro>
    </macrolist>
    <style>
      .container {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        padding: 20px;
      }
      .left, .center, .right {
        flex: 1;
        padding: 10px;
      }
      .left p, .center p, .right p {
        margin: 5px 0;
      }
      .bold {
        font-weight: bold;
      }
      .label {
        color: gray;
        font-size: 11px;
      }
      .signature-line {
        border-bottom: 1px solid black;
        width: 80%;
        margin-bottom: 5px;
      }
      .customs-value {
        background-color: black;
        color: white;
        padding: 3px 6px;
        display: inline-block;
        margin-right: 10px;
        font-weight: bold;
      }
      .customs-amount {
        font-weight: bold;
      }
      .right {
        text-align: right;
      }
      .date {
        font-weight: bold;
        color: #1a0dab;
        text-decoration: underline;
      }
    </style>
  </head>
  <body footer="footer" footer-height="5mm">

    <table style="width:100%; border-collapse:collapse;">
      <tr>
        <td style="width:70%; text-align:center; border:none; padding-left: 170px;">
          <img src="${custom.logo}" style="height:30px; width: 170px; display:block; margin:0 auto;" />
        </td>
        <td style="width:30%; vertical-align:top;">
          <table style="width:120%; font-size:10px; float:right; border:1px solid black; border-collapse:collapse;">
            <tr>
              <td>
                <table style="width:100%;">
                  <tr>
                    <td style="width:50%;" align="center">Commercial Invoice:</td>
                    <td style="width:50%;" align="center"><u>${custom.commercialTerm}</u></td>
                  </tr>
                </table>
              </td>
            </tr>
            <tr>
              <td>
                <table style="width:100%;">
                  <tr>
                    <td style="width:50%;" align="center">Invoice Date:</td>
                    <td style="width:50%;" align="center"><u>${custom.tranDate}</u></td>
                  </tr>
                </table>
              </td>
            </tr>
          </table>
        </td>
      </tr>
    </table><br/>

    <table style="width:100%; font-size:10px; border-collapse:collapse; padding-top: -60px;">
      <tr>
        <td style="width:50%; vertical-align:top; border:1px solid black; padding:6px;">
          <table style="width:100%;">
            <tr><td align="center"><b>USPPI:</b></td></tr>
            <tr><td><p align="center">${custom.shipfrom}</p></td></tr>
          </table>
        </td>
        <td style="width:50%; vertical-align:top; border:1px solid black; border-left: none; padding:6px;">
          <table style="width:100%;">
            <tr><td align="center"><b>Ship From:</b></td></tr>
            <tr><td><p>${custom.shipfrom}</p></td></tr>
          </table>
        </td>
      </tr>
    </table><br/>

    <table style="width:100%; font-size:10px; border-collapse:collapse; padding-top: -60px;">
      <tr>
        <td style="width:50%; vertical-align:top; border:1px solid black; padding:16px;">
          **Value For Customs Purposes Only** <br /> Terms: ${custom.term}
        </td>
        <td style="width:50%; vertical-align:top; border:1px solid black; border-left: none; padding:6px;">
          <table style="width:100%;">
            <tr><td align="center"><b>Delivery:</b></td></tr>
            <tr><td><p>${custom.toship}</p></td></tr>
          </table>
        </td>
      </tr>
    </table>

    <table style="width:100%; font-size:9px; line-height:13px; border-collapse:collapse;">
      <tr>
        <td style="width:50%; border:1px solid black; line-height:13px; padding: 4px;"></td>
        <td style="width:50%; border:1px solid black; border-left: none; line-height:13px; padding: 4px;"></td>
      </tr>
    </table>

    <table style="width:100%; font-size:9px; line-height:13px; border-collapse:collapse;">
      <tr style="background-color:black; color:white; font-weight:bold; text-align:center;">
        <td style="width:5%; border:1px solid black; padding:8px;">Line #</td>
        <td style="width:15%; border:1px solid black; padding:8px;">Part Number</td>
        <td style="width:20%; border:1px solid black; padding:8px;">Description</td>
        <td style="width:10%; border:1px solid black; padding:8px;">Country of Origin</td>
        <td style="width:5%; border:1px solid black; padding:8px;">Qty</td>
        <td style="width:5%; border:1px solid black; padding:8px;">UOM</td>
        <td style="width:10%; border:1px solid black; padding:8px;">Individual Cost</td>
        <td style="width:15%; border:1px solid black; padding:8px;">Extended Cost</td>
        <td style="width:15%; border:1px solid black; padding:8px;">HTS</td>
      </tr>
      <#assign total = 0>
      <#list custom.lineItem as item>
        <#assign total = total + item.extended>
        <tr style="background-color:#d8e6f3;">
          <td style="border:1px solid black; padding:4px;">${item_index + 1}</td>
          <td style="border:1px solid black; padding:4px;">${item.itemName}</td>
          <td style="border:1px solid black; padding:4px;">${item.description}</td>
          <td style="border:1px solid black; padding:4px;">${item.countryofmanufacture}</td>
          <td style="border:1px solid black; padding:4px;">${item.quantity}</td>
          <td style="border:1px solid black; padding:4px;">${item.uom}</td>
          <td style="border:1px solid black; padding:4px;">${item.rate}</td>
          <td style="border:1px solid black; padding:4px;">${item.extended}</td>
          <td style="border:1px solid black; padding:4px;">${item.manufacturertariff}</td>
        </tr>
      </#list>
    </table>

    <table style="width: 100%; margin-top: 10px; font-size: 12px;">
      <tr>
        <td align="right">
          <span class="customs-value">Total Customs Value (USD): $${total}</span>
        </td>
      </tr>
    </table>

    <table style="width: 100%; font-size: 8px; margin-top: 10px;">
      <tr>
        <td align="center"><u>not yet mapped</u></td>
        <td align="center"><u>not yet mapped</u></td>
        <td align="center">_____________________________________</td>
        <td align="center"><u>${custom.tranDate}</u></td>
      </tr>
      <tr>
        <td align="center">Name, Title</td>
        <td align="center">Phone</td>
        <td align="center">Signature</td>
        <td align="center">Date</td>
      </tr>
    </table>

  </body>
</pdf>